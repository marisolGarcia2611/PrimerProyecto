<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/caratula"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/caratula"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cero"
                android:textColor="@color/letras"
                android:textSize="70sp"
                android:background="@color/caratula"
                android:gravity="right|bottom"
                android:onClick="clear"
                android:id="@+id/lbl1">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:text="AC"
                android:textSize="50sp"
                android:textColor="@color/letras"
                android:onClick="clear"
                android:id="@+id/btn1"
                >

            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:text="+/-"
                android:textSize="50sp"
                android:textColor="@color/letras"

                android:id="@+id/btn2">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:text="%"
                android:textSize="50sp"
                android:textColor="@color/letras"
                android:onClick="porcentaje"
                android:id="@+id/btn3"
                >
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton3"
                android:text="รท"
                android:textSize="50dp"
                android:textColor="@color/letras"
                android:onClick="dividir"
                android:id="@+id/btn4"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="7"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num7">

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="8"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num8">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="9"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num9">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton3"
                android:text="x"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="multiplicar"
                android:id="@+id/btn8">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="4"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num4"
                >

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="5"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num5">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="6"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num6">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton3"
                android:text="-"
                android:textSize="60dp"
                android:textColor="@color/letras"
                android:onClick="restar"
                android:id="@+id/btn12">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="1"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num1">

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="2"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num2">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton2"
                android:text="3"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/num3">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/boton3"
                android:text="+"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="sumar"
                android:id="@+id/btn16">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/boton2"
                android:text="0"
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:gravity="center"
                android:onClick="concatenar"
                android:id="@+id/num0">

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/boton2"
                android:text="."
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="concatenar"
                android:id="@+id/punto">
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/boton3"
                android:text="="
                android:textSize="40dp"
                android:textColor="@color/letras"
                android:onClick="Igual"
                android:id="@+id/btn19">
            </Button>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>