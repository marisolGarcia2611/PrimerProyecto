<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_tutor"
    android:background="@drawable/escu">


    <View
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#83FFC107"
        android:gravity="center" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center|top"
        android:background="@drawable/pe"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Tutor experto en áreas multiples,doctordo en psicología"
        android:layout_gravity="center"
        android:textColor="@color/caratula"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:gravity="center"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:id="@+id/btt4"
        android:layout_marginBottom="40dp"
        android:text="contactar"
        android:background="@color/bluelg"
        android:textColor="@color/letras"
        android:onClick="impli"
        >

    </Button>

</FrameLayout>